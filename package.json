{
    "apps": [
        {
            "env": {
                "DEBUG": "koa*,mongoose*,app*",
                "DEBUG_COLORS": 1,
                "HOST": "0.0.0.0",
                "MONGOOSE_DISABLE_STABILITY_WARNING": 1,
                "MONGO_URL": "mongodb://127.0.0.1:27017/baobao?auto_reconnect=true",
                "NODE_ENV": "development"
            },
            "env_production": {
                "DEBUG": "",
                "HOST": "",
                "NODE_ENV": "production",
                "PORT": 8002
            },
            "ignore_watch": [
                "[\\/\\\\]\\./",
                "node_modules",
                "public",
                "views"
            ],
            "instances": "1",
            "name": "baobao",
            "script": ".",
            "watch": false
        }
    ],
    "author": "colder",
    "bugs": {
        "url": "https://github.com/cncolder/baobao/issues"
    },
    "dependencies": {
        "babel": "^5.8.23",
        "debug": "2",
        "hogan.js": "^3.0.2",
        "koa": "1.0.0",
        "koa-body-parsers": "^1.1.0",
        "koa-compress": "^1.0.8",
        "koa-cors": "^0.0.16",
        "koa-generic-session": "^1.9.2",
        "koa-generic-session-mongo": "^0.2.2",
        "koa-json": "^1.1.1",
        "koa-logger": "^1.3.0",
        "koa-polyfills": "^2.0.0",
        "koa-response-time": "^1.0.2",
        "koa-router": "^5.1.2",
        "koa-static": "^1.4.9",
        "koa-views": "^3.1.0",
        "lodash": "^3.10.1",
        "mongoose": "^4.1.5",
        "ms": "^0.7.0",
        "mz": "^2.0.0"
    },
    "deploy": {
        "aliyun": {
            "host": "bao--bao.com",
            "path": "/www/bao--bao.com",
            "post-deploy": "npm i --production && pm2 startOrRestart package.json --env production",
            "ref": "origin/master",
            "repo": "https://github.com/cncolder/baobao.git",
            "user": "root"
        }
    },
    "description": "BaoBao website",
    "devDependencies": {
        "babelify": "^6.3.0",
        "browserify": "^11.0.1",
        "gulp": "^3.8.11",
        "gulp-autoprefixer": "^3.0.1",
        "gulp-concat": "^2.6.0",
        "gulp-less": "^3.0.2",
        "gulp-sourcemaps": "^1.5.1",
        "gulp-util": "^3.0.6",
        "vinyl-transform": "^1.0.0"
    },
    "engines": {
        "node": "0.12.x",
        "npm": "2.5.x"
    },
    "homepage": "https://github.com/cncolder/baobao",
    "license": "MIT",
    "name": "baobao",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/cncolder/baobao.git"
    },
    "scripts": {
        "deploy": "pm2 deploy package.json aliyun",
        "start": "node .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "version": "1.1.0"
}
